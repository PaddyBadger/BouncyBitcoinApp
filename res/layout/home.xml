<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    
		 <Button
	    	android:layout_width="wrap_content"
	    	android:layout_weight="1"
	    	android:layout_height="wrap_content"
	    	android:id="@+id/bouncing_ball_btn"
	    	android:height="30dp"
	    	android:text="USD"
	    	android:background="@drawable/button" />	
	    
	    <Button
	    	android:layout_width="wrap_content"
	    	android:layout_weight="1"
	    	android:layout_height="wrap_content"
	    	android:id="@+id/bouncing_ball_eur"
	    	android:height="30dp"
	    	android:background="@drawable/button"
	    	android:text="EUR" />	

	    <Button
	        android:id="@+id/bouncing_ball_cny"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@drawable/button"
	        android:height="30dp"
	        android:text="CNY" />
	
	    <Button
	        android:id="@+id/bouncing_ball_gbp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@drawable/button"
	        android:height="30dp"
	        android:text="GBP" />
  
    </LinearLayout>
    
     <SurfaceView
		android:layout_width="fill_parent" 
		android:layout_height="match_parent"
		android:id="@+id/bouncy_bitcoin_home_surface" /> 
	
</LinearLayout>

